@page
@model E_Leraning_Application.Pages.Instructor.AddCourseModel
@{
    ViewData["Title"] = "Add Course";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: #fff4e6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #f7941d;
        font-weight: bold;
    }

    .form-container {
        background-color: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        max-width: 700px;
        margin: auto;
    }

    .btn-success {
        background-color: #f7941d;
        border-color: #f7941d;
        font-weight: 500;
    }

        .btn-success:hover {
            background-color: #e67e22;
            border-color: #e67e22;
        }

    .alert {
        max-width: 700px;
        margin: 1rem auto;
    }
</style>

<div class="container py-4">
    <h2 class="text-center mb-4">📘 Add New Course</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success text-center">@Model.SuccessMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
    }

    <div class="form-container">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Course.Title" class="form-label">Title</label>
                <input asp-for="Course.Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Course.Description" class="form-label">Description</label>
                <textarea asp-for="Course.Description" class="form-control" rows="4"></textarea>
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">Add Course</button>
            </div>

            <partial name="_ValidationScriptsPartial" />
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>
