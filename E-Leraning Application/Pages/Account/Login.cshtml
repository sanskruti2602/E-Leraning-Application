@page
@model E_Leraning_Application.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<section class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Login to <span style="color:#f7941d;">NovaLearn</span></h2>
        <p class="text-muted">Enter your credentials to continue</p>
    </div>

    <div class="w-50 mx-auto bg-light p-4 rounded shadow-sm">
        @if (Model.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" required />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" required />
            </div>

            <button type="submit" class="btn btn-outline-dark w-100">Login</button>
        </form>
    </div>
</section>
