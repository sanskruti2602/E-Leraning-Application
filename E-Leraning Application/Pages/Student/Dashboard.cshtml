@page
@model E_Leraning_Application.Pages.Student.DashboardModel
@using System

@{
    ViewData["Title"] = "Student Dashboard";
}

<style>
    .sidebar {
        background-color: #f7941d;
        min-height: 100vh;
        color: white;
    }

        .sidebar h5 {
            font-size: 1.2rem;
            border-bottom: 1px solid white;
            padding-bottom: 8px;
            margin-bottom: 20px;
        }

        .sidebar a {
            color: white;
            display: block;
            padding: 10px 0;
            text-decoration: none;
            font-size: 1rem;
            cursor: pointer;
        }

            .sidebar a:hover {
                background-color: #e98300;
                padding-left: 6px;
            }

    .card {
        border: none;
        border-radius: 12px;
        background-color: #fff4e6;
        height: 100%;
        box-shadow: 0 0 8px rgb(247 148 29 / 0.4);
        display: flex;
        flex-direction: column;
    }

    .card-title {
        font-weight: 700;
        color: #222;
    }

    .card-text {
        color: #555;
        flex-grow: 1;
        margin-top: 0.5rem;
        margin-bottom: 1rem;
    }

    .progress {
        height: 20px;
        background-color: #f0f0f0;
        border-radius: 10px;
        margin-bottom: 1rem;
        overflow: hidden;
    }

    .progress-bar {
        background-color: #f7941d;
        font-weight: 600;
        font-size: 0.85rem;
        line-height: 20px;
        color: white;
        text-align: center;
        border-radius: 10px;
    }

    .btn-continue {
        background-color: #f7941d;
        font-weight: 700;
        color: white;
        border: none;
        padding: 10px 0;
        border-radius: 8px;
        width: 100%;
        transition: background-color 0.3s ease;
        margin-top: auto;
        text-align: center;
        display: inline-block;
        text-decoration: none;
        cursor: pointer;
    }

        .btn-continue:hover {
            background-color: #e68300;
            color: white;
            text-decoration: none;
        }

    /* Announcement Cards */
    #announcementBox {
        margin-top: 2rem;
    }

        #announcementBox .card {
            border-left-width: 5px;
            border-left-style: solid;
            border-left-color: #f7941d;
            box-shadow: 0 0 12px rgb(247 148 29 / 0.3);
        }

        #announcementBox .card-title {
            color: #f7941d;
            font-weight: 800;
        }

        #announcementBox .card-text {
            color: #444;
            font-size: 0.9rem;
        }

        #announcementBox .text-muted {
            font-size: 0.8rem;
        }

        #announcementBox .btn-outline-warning {
            color: #f7941d;
            border-color: #f7941d;
        }

            #announcementBox .btn-outline-warning:hover {
                background-color: #f7941d;
                color: white;
                border-color: #e68300;
            }

    /* Hide announcements by default */
    #announcementBox {
        display: none;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 sidebar p-3">
            <h5>Student Menu</h5>
            <a asp-page="/Student/ViewProfile">Edit Profile</a>
            <a asp-page="/Student/MyCourses">My Courses</a>
            <a asp-page="/Student/AvailableCourses">Available Courses</a>
            <a id="announcementToggle" style="cursor:pointer;">Announcements</a>
            <a asp-page="/Student/Wishlist">Wishlist</a>
        </div>

        <!-- Main Content -->
        <div class="col-md-10 p-4">
            <h3 class="mb-4">Welcome, @Model.StudentName</h3>

            @* Enrolled Courses Section *@
            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <div class="row">
                    @foreach (var enrollment in Model.Enrollments.Take(4))
                    {
                        var rnd = new Random(Guid.NewGuid().GetHashCode());
                        int randomProgress = rnd.Next(0, 101);

                        <div class="col-md-6 col-lg-3 mb-4 d-flex align-items-stretch">
                            <div class="card">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">@enrollment.Course.Title</h5>
                                    <p class="card-text">
                                        @if (!string.IsNullOrEmpty(enrollment.Course.Description))
                                        {
                                            @($"{enrollment.Course.Description.Substring(0, Math.Min(60, enrollment.Course.Description.Length))}...")
                                        }
                                    </p>

                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar"
                                             style="width:@randomProgress%;"
                                             aria-valuenow="@randomProgress"
                                             aria-valuemin="0" aria-valuemax="100">
                                            @($"{randomProgress}%")
                                        </div>
                                    </div>

                                    <a asp-page="/Student/CourseDetails" asp-route-id="@enrollment.Course.Id" class="btn-continue mt-auto">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">You have not enrolled in any courses yet.</p>
            }

            @* Announcement Section (Hidden initially) *@
            <div id="announcementBox">
                <h4 class="mb-3">Latest Announcements</h4>
                <div class="row">
                    <div class="col-md-6 col-lg-3 mb-4 d-flex align-items-stretch">
                        <div class="card shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">Certification Update</h5>
                                <small class="text-muted mb-2">August 1, 2025</small>
                                <p class="card-text flex-grow-1">
                                    Digital certificates are now live! Download and share your course completion certificates instantly.
                                </p>
                                <a href="#" class="btn btn-outline-warning mt-auto">Learn More</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-4 d-flex align-items-stretch">
                        <div class="card shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">New Course Launch</h5>
                                <small class="text-muted mb-2">July 25, 2025</small>
                                <p class="card-text flex-grow-1">
                                    Advanced C# Programming course launching next week. Enroll early to get exclusive content.
                                </p>
                                <a href="#" class="btn btn-outline-warning mt-auto">Explore Course</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-4 d-flex align-items-stretch">
                        <div class="card shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">System Maintenance</h5>
                                <small class="text-muted mb-2">August 15, 2025</small>
                                <p class="card-text flex-grow-1">
                                    Scheduled downtime on Aug 15 from 2 AM to 4 AM for system improvements.
                                </p>
                                <a href="#" class="btn btn-outline-warning mt-auto">Details</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-4 d-flex align-items-stretch">
                        <div class="card shadow-sm">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">Summer Break</h5>
                                <small class="text-muted mb-2">July 1 - July 15, 2025</small>
                                <p class="card-text flex-grow-1">
                                    Courses will be paused for summer break. Resume learning after July 15.
                                </p>
                                <a href="#" class="btn btn-outline-warning mt-auto">More Info</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    document.getElementById("announcementToggle").addEventListener("click", function () {
        var box = document.getElementById("announcementBox");
        if (box.style.display === "none" || box.style.display === "") {
            box.style.display = "block";
            // Scroll to announcements smoothly
            box.scrollIntoView({ behavior: 'smooth' });
        } else {
            box.style.display = "none";
        }
    });
</script>
