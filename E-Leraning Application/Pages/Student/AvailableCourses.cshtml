@page
@model E_Leraning_Application.Pages.AvailableCourseModel
@{
    ViewData["Title"] = "Available Courses";
}

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color: #f7941d; font-weight: bold;">Available Courses</h2>

    <div class="row">
        @if (Model.Courses != null && Model.Courses.Count > 0)
        {
            foreach (var course in Model.Courses)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 h-100" style="background-color: #fff4e6; border-radius: 12px;">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title" style="color: #222; font-weight: bold;">@course.Title</h5>
                            <p class="card-text text-muted">@course.Description</p>
                            <p class="mb-2">
                                <strong>Instructor:</strong>
                                <span style="color: #f7941d;">@course.Instructor?.FullName</span>
                            </p>

                            @* Enrollment success/error message per course *@
                            @if (Model.EnrollmentMessages.ContainsKey(course.Id))
                            {
                                <div class="alert alert-info py-1 mb-2" style="font-size: 0.9rem;">
                                    @Model.EnrollmentMessages[course.Id]
                                </div>
                            }

                            <div class="mt-auto">
                                <form method="post">
                                    <input type="hidden" name="CourseId" value="@course.Id" />
                                    <button type="submit" class="btn w-100 text-white" style="background-color: #f7941d; font-weight: bold;">
                                        Enroll Now
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p class="text-muted">No courses available at the moment.</p>
            </div>
        }
    </div>
</div>
