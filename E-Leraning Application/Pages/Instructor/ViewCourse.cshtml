@page "{id:int}"
@model E_Leraning_Application.Pages.Instructor.ViewCourseModel
@{
    ViewData["Title"] = "Course Details";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: #fff4e6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #f7941d;
        font-weight: bold;
    }

    .course-summary {
        background-color: #fff;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        margin-bottom: 2rem;
    }

    .lesson-card {
        background-color: #fffdf7;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        box-shadow: 0 1px 6px rgba(0, 0, 0, 0.06);
    }

        .lesson-card h5 {
            color: #333;
            font-weight: 600;
        }

    .btn-outline-secondary {
        border-color: #f7941d;
        color: #f7941d;
    }

        .btn-outline-secondary:hover {
            background-color: #f7941d;
            color: white;
        }

    .alert {
        background-color: #ffe5cc;
        border-left: 5px solid #f7941d;
        color: #333;
    }
</style>

<div class="container py-4">
    <div class="course-summary">
        <h2>@Model.Course.Title</h2>
        <p class="text-muted">@Model.Course.Description</p>

        <div class="row mt-3">
            <div class="col-md-6 mb-2">
                <strong>Total Lessons:</strong> @Model.Lessons.Count
            </div>
            <div class="col-md-6 mb-2">
                <strong>Total Enrolled Learners:</strong> @Model.LearnerCount
            </div>
        </div>
    </div>

    <h4 class="mb-3" style="color: #f7941d;">📚 Lessons in this Course</h4>

    @if (Model.Lessons.Any())
    {
        foreach (var lesson in Model.Lessons)
        {
            <div class="lesson-card">
                <h5>@lesson.Title</h5>
                <p>@lesson.Content</p>
                @if (!string.IsNullOrEmpty(lesson.VideoUrl))
                {
                    <a href="@lesson.VideoUrl" target="_blank" class="btn btn-sm btn-outline-secondary">
                        🎬 Watch Video
                    </a>
                }
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning text-center">No lessons added yet for this course.</div>
    }
</div>
