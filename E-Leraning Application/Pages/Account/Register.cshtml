@page
@model E_Leraning_Application.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<section class="container py-5">
    <div class="text-center mb-4">
        <h2 class="fw-bold">Register as <span class="text-capitalize" style="color:#f7941d;">@Model.Role</span></h2>
        <p class="text-muted">Fill in your details to get started</p>
    </div>

    <div class="w-50 mx-auto bg-light p-4 rounded shadow-sm">

        @if (Model.IsSuccess)
        {
            <div class="alert alert-success text-center">
                ✅ Registration successful!
                <a href="/Account/Login" class="btn btn-sm btn-outline-dark ms-2">Login Now</a>
            </div>
        }

        <form method="post">
            <input type="hidden" asp-for="Role" />

            <div class="mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Enter your name" required />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" required />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
            </div>

            <button type="submit" class="btn btn-outline-dark w-100">Register</button>
            <div class="text-center mt-3">
                Already have an account?
                <a href="/Account/Login" class="text-decoration-none" style="color: #f7941d;">Login here</a>
            </div>

        </form>
    </div>
</section>
