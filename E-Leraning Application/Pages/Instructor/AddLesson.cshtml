@page
@model E_Leraning_Application.Pages.Instructor.AddLessonModel
@{
    ViewData["Title"] = "Add Lesson";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: #fff4e6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h2 {
        color: #f7941d;
        font-weight: bold;
        margin-bottom: 1.5rem;
    }

    .form-container {
        background-color: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        max-width: 700px;
        margin: auto;
    }

    label {
        font-weight: 600;
        color: #333;
    }

    .btn-success {
        background-color: #f7941d;
        border-color: #f7941d;
        font-weight: 500;
    }

        .btn-success:hover {
            background-color: #e67e22;
            border-color: #e67e22;
        }

    .alert {
        max-width: 700px;
        margin: 1rem auto;
    }
</style>

<div class="container py-4">

    <h2 class="text-center">📘 Add New Lesson</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success text-center">@Model.SuccessMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger text-center">@Model.ErrorMessage</div>
    }

    <div class="form-container">
        <form method="post">
            <div class="mb-3">
                <label for="CourseId" class="form-label">Select Course</label>
                <select asp-for="Lesson.CourseId" class="form-select" asp-items="Model.CourseOptions">
                    <option value="">-- Select a Course --</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Lesson.Title" class="form-label">Lesson Title</label>
                <input asp-for="Lesson.Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Lesson.Content" class="form-label">Lesson Content</label>
                <textarea asp-for="Lesson.Content" class="form-control" rows="4"></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Lesson.VideoUrl" class="form-label">Video URL (Optional)</label>
                <input asp-for="Lesson.VideoUrl" class="form-control" />
            </div>

            <div class="text-end">
                <button type="submit" class="btn btn-success">Add Lesson</button>
            </div>
        </form>
    </div>
</div>
